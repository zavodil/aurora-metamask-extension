{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "tsout",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    "**/node_modules",
    "**/*.test.js",
    "**/*.test.ts",
    "**/*.test.tsx",
    ".storybook/**/*",
    "dist/**/*"
  ],
  "extends": "@tsconfig/node14/tsconfig.json",
  "include": [
    "app/**/*",
    "development/**/*",
    "test/**/*",
    "ui/**/*",
    "dependencies.d.ts"
  ]
}
